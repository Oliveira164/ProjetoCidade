@model ProjetoCidade.Models.Produto;

@{
    ViewData["Title"] = "Produtos";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold text-primary mb-1">Produtos</h1>
            <p class="text-muted mb-0">Gerencie os produtos cadastros e cadastre outros produtos.</p>
        </div>
        <a asp-controller="Produto" asp-action="Cadastrar" class="btn btn-lg btn-success shadow-sm">
            <i class="bi bi-plus-circle me-2"></i> Novo Produto
        </a>
    </div>
</div>